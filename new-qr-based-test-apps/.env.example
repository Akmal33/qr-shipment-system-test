# Copy this file to .env and configure your environment
# Database Configuration
MONGODB_URI=mongodb://admin:warehouse123@localhost:27017/warehouse_db?authSource=admin
MONGODB_DATABASE=warehouse_db

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# Kafka Configuration
KAFKA_BROKERS=localhost:9092

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Ports
DASHBOARD_API_PORT=8001
BARCODE_SERVICE_PORT=8002
SCANNER_API_PORT=8003

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8001
REACT_APP_BARCODE_SERVICE_URL=http://localhost:8002

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# Barcode Configuration
BARCODE_IMAGE_PATH=./storage/barcodes
BARCODE_DEFAULT_FORMAT=CODE128

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json